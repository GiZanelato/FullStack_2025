    <h1>Lista de Carros atual:</h1>
    
   <% for (var i = 0; i < usuarios.length; i++) { %>
    <div id="item_lista">
        <p>Marca: <%= usuarios[i].db_marca %></p>
        <p>Modelo: <%= usuarios[i].db_modelo %></p>
        <p>Ano: <%= usuarios[i].db_ano %></p>
        <p>Qtde_disponivel: <%= usuarios[i].db_qtde %></p>

        <% if (usuarios[i].db_qtde > 0) { %>
            <form action="/vender_carro" method="POST">
                <input type="hidden" name="marca" value="<%= usuarios[i].db_marca %>">
                <input type="hidden" name="modelo" value="<%= usuarios[i].db_modelo %>">
                <input type="hidden" name="ano" value="<%= usuarios[i].db_ano %>">
                <button type="submit">Vender</button>
            </form>
        <% } else { %>
            <p style="color:red;"><strong>Esgotado</strong></p>
        <% } %>
        <br>
    </div>
<% } %>

    
    
