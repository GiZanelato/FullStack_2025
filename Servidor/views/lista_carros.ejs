    <h1>Lista de Carros atual:</h1>
    
   <% for (var i = 0; i < carros.length; i++) { %>
    <div id="item_lista">
        <p>Marca: <%= carros[i].db_marca %></p>
        <p>Modelo: <%= carros[i].db_modelo %></p>
        <p>Ano: <%= carros[i].db_ano %></p>
        <p>Qtde_disponivel: <%= carros[i].db_qtde %></p>
        <br>

        <form action="/vender_carro" method="post">
            <input type="hidden" name="marca" value="<%= carros[i].db_marca %>">
            <input type="hidden" name="modelo" value="<%= carros[i].db_modelo %>">
            <input type="hidden" name="ano" value="<%= carros[i].db_ano %>">
            <input type="hidden" name="qtde" value="<%= carros[i].db_qtde %>">
            <input type="submit" value="Vender">
        </form>
        
    </div>
<% } %>

    
    
